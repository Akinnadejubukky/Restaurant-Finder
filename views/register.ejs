<%include partials/header%>
<%include partials/navbarLight%>
<style>
    body {
        background-image: linear-gradient(rgba(0, 0, 0, 0.836), rgba(0, 0, 0, 0.479)), url("../img/eat5.jpeg");
    }
</style>
<div class="container">
    <h3 class="text-center mt-5"; style="font-family: 'Times New Roman', Times, serif , Tahoma, Geneva, Verdana, sans-serif; color: white;">Feed your hunger and cravings</h3>
    <div class="row">
        <div class="col-lg-4 col-md-4"></div>
        <div class="col-lg-4 col-md-4">
            <form class="mt-4" action="/register" method="post" ">
                <div class="form-group">
                    <input type="text" class="form-control" name="username" id="username" placeholder="Enter username" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
                           placeholder="Re-enter Password" onkeyup="validateInput()" required>
                </div>
                <center><button type="submit" class="btn btn-primary" style="width: 100%">Sign Up</button>
                <br><a href="/login"; style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color:white;">I think i have already registered! Login</a> </center><br>
                <span id="message" class="text-danger"></span>

            </form>
        </div>
        <div class="col-lg-4 col-md-4"></div>
    </div>
</div>
<script src="../js/registerPage.js" type="text/javascript" ></script>
<%include partials/footer%>